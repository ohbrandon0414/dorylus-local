#! /bin/bash

cd $( dirname $0 )/..

# First argument is the idea of the node running the weight server
weightserverNode=${1}

weightServerIp=$( . .venv/bin/activate; python3 -m ec2_manager ${weightserverNode:=0} pubip )

if [ ! -d ./results ]; then
	mkdir results
fi


# Args: <Coordserver-Port> <Weightserver-IP> <Weightserver-Port> <Dataserver-Port>
./build/coordination_server 65430 ${weightServerIp} 65432 65431
